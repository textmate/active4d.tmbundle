				<string># Build on the current query using the current line's table.
# First thing to do is to see if the current line begins with "query([table]..."

if [[ `echo "$TM_CURRENT_LINE" | egrep "^\s*(query|QUERY|Query)\s*\(\[.*?\]"` ]]; then
  # Extract the table name from the query
  TABLE=`echo "$TM_CURRENT_LINE" | awk '{ match($0, "[\[]\[^]\]+[\]]"); print substr($0, RSTART + 1, RLENGTH - 2) }'`
  echo '${TM_CURRENT_LINE}'
  echo -n "query([$TABLE]; \${1:conjunction}; [$TABLE]\${2:field})"
fi</string>
